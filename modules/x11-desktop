#!/usr/bin/env bash

# usable desktop environment
for p in \
    termite vicious redshift lxsession compton chromium
do
    do_install "$p"
done
for p in \
    awesome-git lain-git kupfer-adds-git \
    faba-icon-theme-git gtk-theme-arc-git breeze-snow-cursor-theme
do
    do_install_aur "$p"
done

# other usual tools
for p in \
    scrot parcellite i3lock engrampa nitrogen p7zip zathura zathura-pdf-mupdf \
    ncmpcpp trash-cli gparted gvfs gvfs-smb gvfs-mtp ffmpegthumbnailer \
    xclip mpv xdg-utils perl-file-mimeinfo wmctrl youtube-dl pcmanfm gpicview
do
    do_install "$p"
done
for p in \
    dropbox-cli colorgrab sublime-text-dev
do
    do_install_aur "$p"
done
